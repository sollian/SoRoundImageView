<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    tools:context="sollian.com.soroundimageview.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:showDividers="middle">

            <sollian.com.soroundimageview.SoRoundImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#888"
                android:scaleType="fitCenter"
                android:src="@mipmap/img"
                app:riv_cornerRadius="20dp"
                app:riv_shape="rectangle"
                app:riv_strokeColor="@android:color/white"
                app:riv_strokeWidth="3dp"
            />
            <sollian.com.soroundimageview.SoRoundImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#888"
                android:scaleType="fitStart"
                android:src="@mipmap/img"
                app:riv_cornerRadius="20dp"
                app:riv_shape="rectangle"
                app:riv_strokeColor="@android:color/white"
                app:riv_strokeWidth="3dp"
            />
            <sollian.com.soroundimageview.SoRoundImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#888"
                android:scaleType="fitEnd"
                android:src="@mipmap/img"
                app:riv_cornerRadius="20dp"
                app:riv_shape="rectangle"
                app:riv_strokeColor="@android:color/white"
                app:riv_strokeWidth="3dp"
            />
            <sollian.com.soroundimageview.SoRoundImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#888"
                android:scaleType="fitXY"
                android:src="@mipmap/img"
                app:riv_cornerRadius="20dp"
                app:riv_shape="rectangle"
                app:riv_strokeColor="@android:color/white"
                app:riv_strokeWidth="3dp"
            />
            <sollian.com.soroundimageview.SoRoundImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#888"
                android:scaleType="centerInside"
                android:src="@mipmap/img"
                app:riv_cornerRadius="3dp"
                app:riv_shape="rectangle"
                app:riv_strokeColor="@android:color/white"
                app:riv_strokeWidth="3dp"
            />
            <sollian.com.soroundimageview.SoRoundImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#888"
                android:src="@mipmap/img"
                app:riv_shape="circle"
                app:riv_strokeColor="@android:color/white"
                app:riv_strokeWidth="3dp"
            />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
